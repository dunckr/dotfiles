config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Positioning
bind 1:shift;cmd push left  bar-resize:screenSizeX/2
bind 2:shift;cmd push right bar-resize:screenSizeX/2

bind 3:shift;cmd push up    bar-resize:screenSizeY/2
bind 4:shift;cmd push down  bar-resize:screenSizeY/2

bind 5:shift;cmd corner top-left resize:screenSizeX/2;screenSizeY/2
bind 6:shift;cmd corner bottom-left resize:screenSizeX/2;screenSizeY/2
bind 7:shift;cmd corner top-right resize:screenSizeX/2;screenSizeY/2
bind 8:shift;cmd corner bottom-right resize:screenSizeX/2;screenSizeY/2

bind 9:shift;cmd push left  bar-resize:screenSizeX/3
bind 0:shift;cmd push right bar-resize:screenSizeX/3

# Sizing
bind 1:ctrl;cmd move screenOriginX+screenSizeX*0.45;screenOriginY+screenSizeY*0.45 screenSizeX*0.1;screenSizeY*0.1
bind 2:ctrl;cmd move screenOriginX+screenSizeX*0.4;screenOriginY+screenSizeY*0.4 screenSizeX*0.2;screenSizeY*0.2
bind 3:ctrl;cmd move screenOriginX+screenSizeX*0.35;screenOriginY+screenSizeY*0.35 screenSizeX*0.3;screenSizeY*0.3
bind 4:ctrl;cmd move screenOriginX+screenSizeX*0.3;screenOriginY+screenSizeY*0.3 screenSizeX*0.4;screenSizeY*0.4
bind 5:ctrl;cmd move screenOriginX+screenSizeX*0.25;screenOriginY+screenSizeY*0.25 screenSizeX*0.5;screenSizeY*0.5
bind 6:ctrl;cmd move screenOriginX+screenSizeX*0.2;screenOriginY+screenSizeY*0.2 screenSizeX*0.6;screenSizeY*0.6
bind 7:ctrl;cmd move screenOriginX+screenSizeX*0.15;screenOriginY+screenSizeY*0.15 screenSizeX*0.7;screenSizeY*0.7
bind 8:ctrl;cmd move screenOriginX+screenSizeX*0.1;screenOriginY+screenSizeY*0.1 screenSizeX*0.8;screenSizeY*0.8
bind 9:ctrl;cmd move screenOriginX+screenSizeX*0.05;screenOriginY+screenSizeY*0.05 screenSizeX*0.9;screenSizeY*0.9
bind 0:ctrl;cmd move screenOriginX+screenSizeX*0.05;screenOriginY+screenSizeY*0.05 screenSizeX*0.9;screenSizeY*0.9

# Fullscreen
bind =:shift;cmd move screenOriginX;screenOriginY  screenSizeX;screenSizeY

# Movement
bind [:alt;cmd nudge +0 +10%
bind ]:alt;cmd nudge +0 -10%
bind ]:shift;cmd nudge +10% +0
bind [:shift;cmd nudge -10% +0

bind up:ctrl;cmd nudge +0 -10%
bind down:ctrl;cmd nudge +0 +10%
bind right:ctrl;cmd nudge +10% +0
bind left:ctrl;cmd nudge -10% +0
