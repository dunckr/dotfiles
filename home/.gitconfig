[github]
  user = dunckr

[core]
  excludesfile = ~/.gitignore
  editor = vim

[apply]
  whitepace = nowarn

[push]
  default = matching

[color]
  ui = true
  branch = auto
  diff = auto
  status = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red bold
  new = green bold

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
