  email = dunckr@gmail.com

[github]
  user = dunckr

[core]
  excludesfile = ~/.gitignore
  editor = vim
	pager = diff-so-fancy | less --tabs=4 -RFX

[apply]
  whitepace = nowarn

[push]
  default = current

[color]
  ui = always
[color "diff"]
  commit = green bold
  frag = magenta bold
  meta = yellow bold
  new = green bold
  old = red bold
  whitespace = red reverse
[color "diff-highlight"]
  newHighlight = "green bold 22"
  newNormal = "green bold"
  oldHighlight = "red bold 52"
  oldNormal = red bold
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.local
