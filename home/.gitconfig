[user]
  name = Duncan Beaton
  email = dunckr@gmail.com

[github]
  user = dunckr

[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = delta

[apply]
  whitepace = nowarn

[push]
  default = current

[color]
  ui = always
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[interactive]
  diffFilter = delta --color-only

[commit]
    verbose = true

[help]
  autocorrect = 1

[include]
  path = ~/.gitconfig.local
