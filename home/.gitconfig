[user]
  name = Duncan Beaton
  email = dunckr@gmail.com

[github]
  user = dunckr

[core]
  excludesfile = ~/.gitignore
  editor = nvim
  pager = delta

[branch]
  sort = -committerdate

[tag]
  sort = version:refname

[apply]
  whitepace = nowarn

[push]
  default = simple
  autoSetupRemote = true
  followTags = true

[color]
  ui = always

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan
  
[fetch]
  prune = true
  pruneTags = true
  all = true

[interactive]
  diffFilter = delta --color-only

[commit]
  verbose = true

[help]
  autocorrect = 1
  
[rebase]
  autoSquash = true
  autoStash = true
  updateRefs = true

[include]
  path = ~/.gitconfig.local
[init]
	defaultBranch = main
